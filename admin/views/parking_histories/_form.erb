<% error = @parking_history.errors.include?(:dh_ins) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :dh_ins, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :dh_ins, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:dh_ins) : "Ex: a simple text" %></span>
  </div>
</fieldset>
