<% error = @parking_cost_history.errors.include?(:date) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :date, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :date, :class => 'form-control input-xlarge input-with-feedback date-time', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:date) : "Ex: a simple text" %></span>
  </div>
</fieldset>
<% error = @parking_cost_history.errors.include?(:parking_cost) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :parking_cost, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :parking_cost, :class => 'form-control input-xlarge input-with-feedback' %>
    <span class='help-inline'><%= error ? f.error_message_on(:parking_cost) : "Ex: a simple text" %></span>
  </div>
</fieldset>
<% error = @parking_cost_history.errors.include?(:card_type_id) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :card_type_id, :class => 'control-label' %>
  <div class='controls'>
    <%= select_tag('parking_cost_history[card_type_id]', :collection => CardType.all, :fields => [:name, :id], :include_blank => true,
     :class => 'form-control input-xlarge input-with-feedback') %>
    <span class='help-inline'><%= error ? f.error_message_on(:card_type_id) : "Ex: a simple text" %></span>
  </div>
</fieldset>


<div class="form-actions">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:parking_cost_histories, :index), :class => 'btn btn-default' %>
</div>