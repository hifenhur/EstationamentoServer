<% error = @enroll_card.errors.include?(:pin) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
  <%= f.label :pin, :class => 'control-label' %>
  <div class='controls'>
    <%= f.text_field :pin, :class => 'form-control input-xlarge input-with-feedback', :autofocus => true %>
    <span class='help-inline'><%= error ? f.error_message_on(:pin) : "Ex: a simple text" %></span>
  </div>
</fieldset>
